{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "target": "es2022",
    "module": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": false,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "paths": {
      "@livekit/agents": ["agents/src"],
      "@livekit/agents-plugin-*": ["plugins/*/src"]
    }
  },

  "include": ["realtime.ts", "lib/**/*.ts", "agent-lib/**/*.js"],
  "exclude": ["node_modules", "plugins", "dist", "tsup.config.ts"]
}
